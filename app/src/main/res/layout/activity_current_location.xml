<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.compaq.weatherapp.CurrentLocation">

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/city"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/city"
        android:layout_marginTop="50dp"
        android:text="State"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subLocal"
        android:layout_alignStart="@+id/subLocal"
        android:layout_below="@+id/state"
        android:layout_marginTop="50dp"
        android:text="City"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/city"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="50dp"
        android:text="SubLocality"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/landmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subLocal"
        android:layout_alignStart="@+id/subLocal"
        android:layout_below="@+id/subLocal"
        android:layout_marginTop="50dp"
        android:text="Landmark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/landmark"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/landmark"
        android:layout_marginBottom="50dp"
        android:text="Country"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/showstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/city"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_toEndOf="@+id/subLocal"
        android:layout_toRightOf="@+id/subLocal"
        android:textSize="20sp"
        android:text="showstate" />

    <TextView
        android:id="@+id/showcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/city"
        android:layout_alignEnd="@+id/showstate"
        android:layout_alignRight="@+id/showstate"
        android:textSize="20sp"
        android:text="showcity" />

    <TextView
        android:id="@+id/showsublocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/subLocal"
        android:layout_alignLeft="@+id/showcity"
        android:layout_alignStart="@+id/showcity"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/showlandmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/landmark"
        android:layout_alignBottom="@+id/landmark"
        android:layout_alignLeft="@+id/showsublocal"
        android:layout_alignStart="@+id/showsublocal"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/showcontry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/showsublocal"
        android:layout_alignStart="@+id/showsublocal"
        android:text="showcontry"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/postalcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/showcontry"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="38dp"
        android:textSize="20sp"
        android:text="Postal code" />

    <TextView
        android:id="@+id/showpostal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/postalcode"
        android:layout_alignLeft="@+id/showcontry"
        android:layout_alignStart="@+id/showcontry"
        android:text="showpostal"
        android:textSize="20sp"/>

</RelativeLayout>
